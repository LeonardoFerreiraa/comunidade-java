<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="incubadora_teams">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.invillia.Team</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jdbc_example"/>
            <property name="javax.persistence.jdbc.user" value="lferreira"/>
            <property name="javax.persistence.jdbc.password" value="123123"/>

            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
